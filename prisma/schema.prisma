// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole  @default(USER)
  position      String?
  phone         String?
  address       String?
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts            Account[]
  sessions            Session[]
  companyId           String?
  company             Company? @relation(fields: [companyId], references: [id])
  assignedProjects    ProjectUser[]
  assignedTasks       TaskAssignment[]
  createdProjects     Project[] @relation("ProjectCreator")
  createdTasks        Task[] @relation("TaskCreator")
  createdDocuments    Document[] @relation("DocumentCreator")
  createdApprovals    Approval[] @relation("ApprovalCreator")
  approvalAssignments ApprovalAssignment[]
  chatMessages        ChatMessage[]
  timesheets          Timesheet[]
  notifications       Notification[]
  taskComments        TaskComment[] @relation("TaskComments")
  finances            Finance[]
  approvalComments    ApprovalComment[] @relation("ApprovalComments")
  approvalAttachments ApprovalAttachment[] @relation("ApprovalAttachments")
  approvalHistory     ApprovalHistory[] @relation("ApprovalHistory")
  createdEstimates    Estimate[] @relation("EstimateCreator")
  responsibleWorkStages WorkStage[] @relation("WorkStageResponsible")
  paidFinances          Finance[] @relation("FinancePaidBy")
  checklistsCompleted   ChecklistItem[] @relation("ChecklistCompletedBy")
  uploadedPhotos        StagePhoto[] @relation("StagePhotoUploadedBy")

  @@index([companyId])
  @@index([role])
  @@index([isActive])
  @@index([createdAt])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Company {
  id          String   @id @default(cuid())
  name        String
  description String?
  website     String?
  phone       String?
  address     String?
  actualAddress        String?
  bankAccount          String?
  bankBik              String?
  bankName             String?
  city                 String?
  contactEmail         String?
  contactPhone         String?
  correspondentAccount String?
  directorName         String?
  directorPosition     String?            @default("Генеральный директор")
  inn                  String?
  kpp                  String?
  legalAddress         String?
  legalName            String?
  ogrn                 String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users      User[]
  projects   Project[]
  templates  DocumentTemplate[]
  numberingRules NumberingRule[]
  tasks      Task[]
  taskAssignments TaskAssignment[]
  taskDependencies TaskDependency[]
  taskComments TaskComment[]
  documents  Document[]
  documentVersions DocumentVersion[]
  approvals  Approval[]
  approvalAssignments ApprovalAssignment[]
  chatMessages ChatMessage[]
  finances   Finance[]
  timesheets Timesheet[]
  notifications Notification[]
  notificationSettings NotificationSettings?
  projectObjects ProjectObject[]
  projectUsers ProjectUser[]
  estimates Estimate[]
  estimateItems EstimateItem[]
  workStages WorkStage[]
}

model Project {
  id          String        @id @default(cuid())
  name        String
  description String?
  status      ProjectStatus @default(PLANNING)
  priority   ProjectPriority @default(MEDIUM)
  startDate   DateTime?
  endDate     DateTime?
  budget      Decimal?      @db.Decimal(15, 2)
  expensePlan Decimal?      @db.Decimal(15, 2)
  actualCost  Decimal?      @db.Decimal(15, 2)
  clientName String?
  clientLegalName String?
  clientLegalAddress String?
  clientActualAddress String?
  clientBankAccount String?
  clientBankBik String?
  clientBankName String?
  clientContactPhone String?
  clientContactEmail String?
  clientCorrespondentAccount String?
  clientDirectorName String?
  clientInn String?
  clientKpp String?
  clientOgrn String?
  // Дополнительные поля проекта
  objectAddress String?      // Адрес объекта
  contractNumber String?     // Номер договора
  contractDate DateTime?     // Дата договора
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relations
  companyId   String
  company     Company @relation(fields: [companyId], references: [id])
  creatorId   String
  creator     User @relation("ProjectCreator", fields: [creatorId], references: [id])
  users       ProjectUser[]
  tasks       Task[]
  documents   Document[]
  approvals   Approval[]
  chatMessages ChatMessage[]
  finances    Finance[]
  objects     ProjectObject[]
  timesheets  Timesheet[]
  notifications Notification[]
  estimates   Estimate[]
  workStages  WorkStage[]

  @@index([companyId])
  @@index([status])
  @@index([priority])
  @@index([creatorId])
  @@index([createdAt])
  @@index([startDate])
  @@index([endDate])
}

model ProjectObject {
  id          String   @id @default(cuid())
  name        String
  description String?
  address     String?
  coordinates String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  projectId String
  project   Project @relation(fields: [projectId], references: [id])
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  @@index([companyId])
}

model ProjectUser {
  id        String   @id @default(cuid())
  role      ProjectRole @default(MEMBER)
  joinedAt  DateTime @default(now())

  projectId String
  project   Project @relation(fields: [projectId], references: [id])
  userId    String
  user      User @relation(fields: [userId], references: [id])
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  @@unique([projectId, userId])
  @@index([companyId])
}

model Task {
  id          String     @id @default(cuid())
  title       String
  description String?
  status      TaskStatus @default(TODO)
  priority   TaskPriority @default(MEDIUM)
  startDate   DateTime?
  dueDate     DateTime?
  completedAt DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Relations
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])
  creatorId String
  creator   User @relation("TaskCreator", fields: [creatorId], references: [id])
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])
  assignments TaskAssignment[]
  dependencies TaskDependency[] @relation("TaskDependency")
  dependsOn    TaskDependency[] @relation("DependsOnTask")
  comments TaskComment[]

  @@index([companyId])

  @@index([projectId])
  @@index([status])
  @@index([priority])
  @@index([creatorId])
  @@index([createdAt])
  @@index([dueDate])
  @@index([completedAt])
}

model TaskAssignment {
  id        String   @id @default(cuid())
  assignedAt DateTime @default(now())

  taskId String
  task   Task @relation(fields: [taskId], references: [id])
  userId String
  user   User @relation(fields: [userId], references: [id])
  companyId String?
  company Company? @relation(fields: [companyId], references: [id])

  @@unique([taskId, userId])
  @@index([companyId])
}

model TaskDependency {
  id        String @id @default(cuid())
  type      DependencyType @default(FINISH_TO_START)

  taskId String
  task   Task @relation("TaskDependency", fields: [taskId], references: [id])
  dependsOnId String
  dependsOn   Task @relation("DependsOnTask", fields: [dependsOnId], references: [id])
  companyId String?
  company Company? @relation(fields: [companyId], references: [id])

  @@unique([taskId, dependsOnId])
  @@index([companyId])
}

model TaskComment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  taskId String
  task   Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  userId String
  user   User @relation("TaskComments", fields: [userId], references: [id])
  companyId String?
  company Company? @relation(fields: [companyId], references: [id])

  @@index([companyId])
}

model Document {
  id          String         @id @default(cuid())
  title       String
  description String?
  fileName    String
  filePath    String
  fileSize    Int
  mimeType    String
  version     Int            @default(1)
  isLatest    Boolean        @default(true)
  documentNumber String?
  isPublished      Boolean           @default(false)
  publishedAt      DateTime?
  approvalRequired Boolean           @default(false)
  category         String?           @default("GENERAL")
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  // Relations
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])
  creatorId String
  creator   User @relation("DocumentCreator", fields: [creatorId], references: [id])
  templateId String?
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])
  template   DocumentTemplate? @relation(fields: [templateId], references: [id])
  versions   DocumentVersion[]
  approvals  Approval[]

  @@index([projectId])
  @@index([creatorId])
  @@index([companyId])
  @@index([createdAt])
  @@index([mimeType])
  @@index([isLatest])
  @@index([documentNumber])
  @@index([isPublished])
  @@index([approvalRequired])
  @@index([category])
}

model DocumentVersion {
  id          String   @id @default(cuid())
  version     Int
  fileName    String
  filePath    String
  fileSize    Int
  mimeType    String
  createdAt   DateTime @default(now())

  documentId String
  document   Document @relation(fields: [documentId], references: [id])
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  @@index([companyId])
}

model DocumentTemplate {
  id          String   @id @default(cuid())
  name        String
  description String?
  content     String   @db.Text
  variables   Json?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  companyId String
  company   Company @relation(fields: [companyId], references: [id])
  documents Document[]
}

model Approval {
  id          String        @id @default(cuid())
  title       String
  description String?
  status      ApprovalStatus @default(PENDING)
  type        ApprovalType
  data        Json?
  priority              ApprovalPriority     @default(MEDIUM)
  dueDate               DateTime?
  createdAt             DateTime             @default(now())
  updatedAt              DateTime             @updatedAt
  approvedAt            DateTime?
  rejectedAt            DateTime?
  requireAllApprovals   Boolean              @default(false)
  autoPublishOnApproval Boolean              @default(true)

  // Relations
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])
  documentId String?
  document  Document? @relation(fields: [documentId], references: [id])
  creatorId String
  creator   User @relation("ApprovalCreator", fields: [creatorId], references: [id])
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])
  assignments ApprovalAssignment[]
  comments    ApprovalComment[]
  attachments ApprovalAttachment[]
  history     ApprovalHistory[]

  @@index([companyId])
}

model ApprovalAssignment {
  id        String   @id @default(cuid())
  status    ApprovalStatus @default(PENDING)
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  approvalId String
  approval   Approval @relation(fields: [approvalId], references: [id])
  userId     String
  user       User @relation(fields: [userId], references: [id])
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  @@unique([approvalId, userId])
  @@index([companyId])
}

model ChatMessage {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])
  userId    String
  user      User @relation(fields: [userId], references: [id])
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  @@index([companyId])
}

model Finance {
  id          String      @id @default(cuid())
  type        FinanceType
  category    String
  description String?
  amount      Decimal     @db.Decimal(15, 2)
  date        DateTime
  // Поля для отслеживания оплаты и сверки с банком
  invoiceNumber String?    // Номер счёта
  counterparty  String?    // Контрагент (получатель/плательщик)
  isPaid        Boolean    @default(false)
  paidAt        DateTime?  // Когда оплачен
  paidById      String?    // Кто отметил оплату
  paidBy        User?      @relation("FinancePaidBy", fields: [paidById], references: [id])
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  creatorId String
  creator   User @relation(fields: [creatorId], references: [id])
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])
  
  // Связь с позицией сметы
  estimateItemId String?
  estimateItem   EstimateItem? @relation(fields: [estimateItemId], references: [id], onDelete: SetNull)

  @@index([companyId])
  @@index([isPaid])
  @@index([estimateItemId])
}

model Timesheet {
  id          String   @id @default(cuid())
  date        DateTime
  hours       Decimal  @db.Decimal(5, 2)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  projectId String
  project   Project @relation(fields: [projectId], references: [id])
  userId    String
  user      User @relation(fields: [userId], references: [id])
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  @@index([companyId])
}

// График работ - этапы проекта
model WorkStage {
  id              String    @id @default(cuid())
  name            String
  description     String?
  orderIndex      Int       @default(0)    // Порядок отображения
  
  // Плановые даты
  plannedStart    DateTime
  plannedEnd      DateTime
  
  // Фактические даты
  actualStart     DateTime?
  actualEnd       DateTime?
  
  // Прогресс
  progress        Int       @default(0)    // 0-100%
  status          WorkStageStatus @default(NOT_STARTED)
  
  // Цвет для отображения на графике
  color           String    @default("#3B82F6")
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  projectId       String
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  // Ответственный за этап
  responsibleId   String?
  responsible     User?     @relation("WorkStageResponsible", fields: [responsibleId], references: [id])
  
  // Зависимости (этот этап зависит от других)
  dependsOn       WorkStageDependency[] @relation("DependentStage")
  dependents      WorkStageDependency[] @relation("RequiredStage")
  
  // Чек-лист этапа
  checklist       ChecklistItem[]
  
  // Фото-отчёты
  photos          StagePhoto[]
  
  companyId       String?
  company         Company?  @relation(fields: [companyId], references: [id])

  @@index([projectId])
  @@index([companyId])
  @@index([status])
  @@index([plannedStart])
  @@index([plannedEnd])
}

// Пункт чек-листа для этапа работ
model ChecklistItem {
  id              String    @id @default(cuid())
  title           String                          // Название пункта
  isCompleted     Boolean   @default(false)       // Выполнен ли
  orderIndex      Int       @default(0)           // Порядок отображения
  completedAt     DateTime?                       // Когда выполнен
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Связь с этапом работ
  stageId         String
  stage           WorkStage @relation(fields: [stageId], references: [id], onDelete: Cascade)
  
  // Кто выполнил
  completedById   String?
  completedBy     User?     @relation("ChecklistCompletedBy", fields: [completedById], references: [id])

  @@index([stageId])
  @@index([isCompleted])
}

// Фото-отчёт для этапа работ
model StagePhoto {
  id              String    @id @default(cuid())
  filename        String                          // Имя файла на сервере
  originalName    String                          // Оригинальное имя файла
  description     String?                         // Описание/комментарий к фото
  mimeType        String    @default("image/jpeg")
  size            Int       @default(0)           // Размер в байтах
  
  createdAt       DateTime  @default(now())

  // Связь с этапом работ
  stageId         String
  stage           WorkStage @relation(fields: [stageId], references: [id], onDelete: Cascade)
  
  // Кто загрузил
  uploadedById    String
  uploadedBy      User      @relation("StagePhotoUploadedBy", fields: [uploadedById], references: [id])

  @@index([stageId])
  @@index([createdAt])
}

model WorkStageDependency {
  id              String    @id @default(cuid())
  
  // Зависимый этап (который ждёт)
  stageId         String
  stage           WorkStage @relation("DependentStage", fields: [stageId], references: [id], onDelete: Cascade)
  
  // Требуемый этап (от которого зависит)
  dependsOnId     String
  dependsOn       WorkStage @relation("RequiredStage", fields: [dependsOnId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime  @default(now())

  @@unique([stageId, dependsOnId])
}

model Notification {
  id        String           @id @default(cuid())
  title     String
  message   String
  type      NotificationType
  isRead    Boolean          @default(false)
  actionType String?
  actionId   String?
  projectId  String?
  createdAt DateTime         @default(now())

  userId String
  user   User @relation(fields: [userId], references: [id])
  project Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  companyId String?
  company Company? @relation(fields: [companyId], references: [id])

  @@index([companyId])
  @@index([userId, isRead])
  @@index([type])
}

// Настройки уведомлений компании
model NotificationSettings {
  id                    String   @id @default(cuid())
  
  // Дедлайны этапов
  deadlineReminderDays  Int      @default(3)        // За сколько дней напоминать
  deadlineReminderEnabled Boolean @default(true)    // Включено ли
  
  // Просроченные этапы
  overdueNotifyEnabled  Boolean  @default(true)     // Уведомлять о просрочке
  overdueNotifyManager  Boolean  @default(true)     // Уведомлять руководителя
  
  // Бюджет
  budgetWarningPercent  Int      @default(80)       // При каком % расхода предупреждать
  budgetWarningEnabled  Boolean  @default(true)     // Включено ли
  
  // Счета
  invoiceOverdueEnabled Boolean  @default(true)     // Уведомлять о просроченных счетах
  
  // Время последней проверки (для предотвращения дублирования)
  lastCheckAt           DateTime?
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  companyId             String   @unique
  company               Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
}

model NumberingRule {
  id          String   @id @default(cuid())
  name        String
  pattern     String
  counter     Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  companyId String
  company   Company @relation(fields: [companyId], references: [id])
}

// Enums
enum UserRole {
  OWNER
  ADMIN
  MANAGER
  USER
}

enum ProjectStatus {
  PLANNING
  ACTIVE
  ON_HOLD
  COMPLETED
  CANCELLED
}

enum ProjectPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum ProjectRole {
  OWNER
  MANAGER
  MEMBER
  VIEWER
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  REVIEW
  COMPLETED
  CANCELLED
}

enum WorkStageStatus {
  NOT_STARTED   // Не начат
  IN_PROGRESS   // В работе
  PAUSED        // Приостановлен
  COMPLETED     // Завершён
  DELAYED       // Задерживается
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum DependencyType {
  FINISH_TO_START
  START_TO_START
  FINISH_TO_FINISH
  START_TO_FINISH
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

enum ApprovalType {
  DOCUMENT
  BUDGET
  TIMELINE
  RESOURCE
  GENERAL
}

enum FinanceType {
  INCOME
  EXPENSE
  PLANNED_INCOME
}

enum NotificationType {
  INFO
  WARNING
  ERROR
  SUCCESS
  DEADLINE_REMINDER    // Напоминание о дедлайне
  DEADLINE_OVERDUE     // Просроченный срок
  BUDGET_WARNING       // Предупреждение о бюджете
  INVOICE_OVERDUE      // Просроченный счёт
}
// Новые enum'ы для улучшенной системы согласований
enum ApprovalPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum ApprovalParticipantRole {
  INITIATOR
  APPROVER
  REVIEWER
  OBSERVER
}

// Комментарии к согласованию
model ApprovalComment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  approvalId String
  approval   Approval @relation(fields: [approvalId], references: [id], onDelete: Cascade)
  userId String
  user   User @relation("ApprovalComments", fields: [userId], references: [id])
}

// Вложения к согласованию
model ApprovalAttachment {
  id        String   @id @default(cuid())
  fileName  String
  filePath  String
  fileSize  Int
  mimeType  String
  createdAt DateTime @default(now())
  
  approvalId String
  approval   Approval @relation(fields: [approvalId], references: [id], onDelete: Cascade)
  uploadedById String
  uploadedBy   User @relation("ApprovalAttachments", fields: [uploadedById], references: [id])
}

// История изменений согласования
model ApprovalHistory {
  id        String   @id @default(cuid())
  action    String   // "created", "approved", "rejected", "commented", etc.
  changes   Json?    // Детали изменений
  createdAt DateTime @default(now())
  
  approvalId String
  approval   Approval @relation(fields: [approvalId], references: [id], onDelete: Cascade)
  userId String
  user   User @relation("ApprovalHistory", fields: [userId], references: [id])
}

model Estimate {
  id          String   @id @default(cuid())
  name        String
  description String?
  total       Decimal  @default(0) @db.Decimal(15, 2)
  totalCost   Decimal  @default(0) @db.Decimal(15, 2)
  profit      Decimal  @default(0) @db.Decimal(15, 2)
  vatEnabled  Boolean  @default(false)
  vatRate     Decimal  @default(20) @db.Decimal(5, 2)
  vatAmount   Decimal  @default(0) @db.Decimal(15, 2)
  totalWithVat Decimal @default(0) @db.Decimal(15, 2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  creatorId String
  creator   User @relation("EstimateCreator", fields: [creatorId], references: [id])
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])
  items     EstimateItem[]

  @@index([companyId])
  @@index([projectId])
  @@index([creatorId])
}

model EstimateItem {
  id          String   @id @default(cuid())
  name        String
  description String?
  notes       String?                          // Комментарий к позиции сметы
  quantity    Decimal  @default(1) @db.Decimal(15, 2)
  unit        String   @default("шт")
  unitPrice   Decimal  @default(0) @db.Decimal(15, 2)
  costPrice   Decimal  @default(0) @db.Decimal(15, 2)
  total       Decimal  @default(0) @db.Decimal(15, 2)
  category    String   @default("Материалы")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  estimateId String
  estimate   Estimate @relation(fields: [estimateId], references: [id], onDelete: Cascade)
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])
  
  // Расходы, привязанные к этой позиции сметы
  finances   Finance[]

  @@index([companyId])
  @@index([estimateId])
}
